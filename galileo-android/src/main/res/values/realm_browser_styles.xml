<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="realm_browser_BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/realm_browser_light_blue</item>
        <item name="colorPrimaryDark">@color/realm_browser_blue</item>
        <item name="colorAccent">@color/realm_browser_purple</item>

        <item name="alertDialogTheme">@style/realm_browser_AlertDialogStyle</item>
    </style>

    <style name="realm_browser_BaseTheme.Theme" parent="realm_browser_BaseTheme"></style>

    <style name="realm_browser_BaseTheme.DrawerTheme" parent="realm_browser_BaseTheme"></style>

    <style name="realm_browser_ColumnText">
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/realm_browser_grey_dark</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="realm_browser_ColumnText.Bold" parent="realm_browser_ColumnText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="realm_browser_AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/realm_browser_light_blue</item>
    </style>

</resources>