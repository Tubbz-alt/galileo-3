<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.josedlpozo.galileo">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-feature android:name="android.hardware.sensor.accelerometer" android:required="true" />

    <application>
        <activity
            android:name=".more.PluginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Galileo.Theme"/>
        <activity
            android:name=".flow.ActivityEventDetailActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Galileo.Theme"/>
        <activity
            android:name=".parent.home.HomeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Galileo.Theme"
            android:windowSoftInputMode="stateAlwaysHidden"/>
        <activity
            android:name="com.josedlpozo.galileo.chuck.ui.TransactionActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Galileo.Theme"/>

        <provider
            android:name=".parent.files.GalileoFileProvider"
            android:authorities="${applicationId}.com.josedlpozo.galileo.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_provider_paths"/>
        </provider>

        <activity
            android:name=".realm.realmbrowser.models.view.ModelsActivity"
            android:theme="@style/Galileo.Theme"/>
        <activity
            android:name=".realm.realmbrowser.view.RealmObjectActivity"
            android:theme="@style/Galileo.Theme"
            android:windowSoftInputMode="adjustResize"/>
        <activity
            android:name=".realm.realmbrowser.browser.view.RealmBrowserActivity"
            android:theme="@style/Galileo.Theme"/>

        <activity android:name=".picker.ui.ScreenRecordRequestActivity"
                  android:theme="@style/TransparentTheme"
                  android:exported="false"
                  android:excludeFromRecents="true" />

        <service android:name=".picker.overlays.ColorPickerOverlay" />

    </application>

</manifest>